@model HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Kitapçımıza Hoş Geldiniz!</h1>
</div>
<h3> Yeni Gelenler </h3>
<div class="row">
    <div class="col-md-12">
@foreach(var item in Model.NewBooks) {
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="..." alt="Book Image">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <p class="card-text">@item.Description</p>
            <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detay</a>
        </div>
    </div>
}
</div>

</div>

<h3> Ençok görüntülenenler </h3>
<div class="row">
    <div class="col-md-12>
@foreach (var item in Model.MostViewedBooks)
{
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="..." alt="Book Image">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <p class="card-text">@item.Description</p>
            <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detay</a>
        </div>
    </div>

}
    </div>

</div>