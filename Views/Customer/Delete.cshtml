@model BookStore.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container-fluid">
    <h1>Delete Customer</h1>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this customer?</h4>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Surname)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Surname)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div> 